<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="themeColors">
        <attr name="mainColor" format="color"/>
        <attr name="darkMainColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="iconColor" format="color"/>
        <attr name="checkBoxColor" format="color"/>
        <attr name="switchColor" format="color"/>
        <attr name="toolBarTextColor" format="color"/>
        <attr name="toolBarIconColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ArcProgress">
        <attr name="progress" format="integer"/>
        <attr name="angle" format="float"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="max" format="integer"/>

        <attr name="unfilled_color" format="color"/>
        <attr name="fill_color" format="color"/>

        <attr name="text_size" format="dimension"/>
        <attr name="text_color" format="color"/>

        <attr name="suffix_text" format="string"/>
        <attr name="suffix_text_size" format="dimension"/>
        <attr name="suffix_text_padding" format="dimension"/>

        <attr name="below_text" format="string"/>
        <attr name="below_text_size" format="dimension"/>
        <attr name="below_text_padding" format="dimension"/>

        <attr name="bottom_text" format="string"/>
        <attr name="bottom_text_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="arcProgressStyle" format="reference"/>
    </declare-styleable>
</resources>